@model Company

@{
    ViewData["Title"] = Model.Id != 0
        ? "Edit Company"
        : "New Company";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="col-12 text-center">
                <h2 class="text-primary">@(Model.Id != 0 ? "Edit" : "New") Company</h2>
            </div>
        </div>
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="row">
            <div class="col-12">
                <div class="form-group">
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Enter Name" />
                        <label asp-for="Name"></label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Country" class="form-control" placeholder="Enter Country" />
                        <label asp-for="Country"></label>
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="City" class="form-control" placeholder="Enter City" />
                        <label asp-for="City"></label>
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="StreetAddress" class="form-control" placeholder="Enter Street Address" />
                        <label asp-for="StreetAddress"></label>
                        <span asp-validation-for="StreetAddress" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PostalCode" class="form-control" placeholder="Enter Postal Code" />
                        <label asp-for="PostalCode"></label>
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="Enter Phone Number" />
                        <label asp-for="PhoneNumber"></label>
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-6 col-md-3">
                            <button type="submit" class="btn btn-outline-primary form-control">@(Model.Id != 0 ? "Update" : "Create")</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary form-control border">Back to Companies</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
