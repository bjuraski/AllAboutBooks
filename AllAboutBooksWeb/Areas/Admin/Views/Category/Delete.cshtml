@model Category

@{
    ViewData["Title"] = "Delete Category";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <div class="col-12 text-center">
                <h2 class="text-primary">Edit Category</h2>
            </div>
        </div>
        <div class="form-group">
            <div class="form-floating mb-3">
                <input asp-for="Name" class="form-control" placeholder="Enter name" disabled />
                <label asp-for="Name"></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="DisplayOrder" class="form-control" placeholder="Enter name" disabled />
                <label asp-for="DisplayOrder"></label>
                <span asp-validation-for="DisplayOrder" class="text-danger"></span>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-outline-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary form-control border">Back to Categories</a>
            </div>
        </div>
    </div>
</form>
