@using AllAboutBooks.Utility;

@model IEnumerable<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Products</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
                <i class="@BootstrapIcons.PlusSquare"></i> Create New Product
            </a>
        </div>
    </div>
    <table id="tableData" class="table table-bordered table-striped w-100">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>Category</th>
                <th>ISBN</th>
                <th>Price</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts {
    <script src="~/js/product.js"></script>
}